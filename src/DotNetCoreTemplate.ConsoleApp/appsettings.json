{
  "appName": "DotNetTemplate",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Debug",
    "WriteTo": 
    [
      {
        "Name": "Console",
        "Args": 
        {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      { 
        "Name": "File", 
        "Args": 
        { 
          "path": "logs/log.txt"
        } 
      }
    ]
  }
}